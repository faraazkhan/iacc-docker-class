<%= form_for @student, :html => { :class => "form-horizontal student" } do |f| %>

  <% if @student.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone) %>
  </div>
  <div class="form-group">
    <%= f.label :town, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :town, :class => 'form-control' %>
    </div>
    <%=f.error_span(:town) %>
  </div>
  <div class="form-group">
    <%= f.label :course, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :course, :class => 'form-control' %>
    </div>
    <%=f.error_span(:course) %>
  </div>
  <div class="form-group">
    <%= f.label :paid_tuition, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :paid_tuition, :class => 'form-control' %>
    </div>
    <%=f.error_span(:paid_tuition) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                students_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
